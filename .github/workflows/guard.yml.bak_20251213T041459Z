name: guard
on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
jobs:
  block-direct-push:
    if: ${{ github.event_name == 'push' && github.ref == 'refs/heads/main' }}
    runs-on: ubuntu-latest
    steps:
      - run: |
          echo "Direct push to main is not allowed. Use PR."
          exit 1
  ci:
    if: ${{ github.event_name == 'pull_request' }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - run: echo "CI OK"
